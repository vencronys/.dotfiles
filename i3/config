set $mod Mod4
# set $mod Mod1

# Setting the default terminal
set $term ghostty

exec_always --no-startup-id picom
exec_always --no-startup-id feh --bg-scale ~/Pictures/wallpapers/stars.jpg

# Wireless Mouse settings (ID 13)
exec --no-startup-id xinput --set-prop 13 "libinput Accel Speed" -0.5
exec --no-startup-id xinput --set-prop 13 "libinput Accel Profile Enabled" 1, 0  # flat profile for mouse

# Touchpad settings (ID 15) - Speed it up to match wireless mouse
exec --no-startup-id xinput --set-prop 15 "libinput Accel Speed" 0.5  # increase speed
exec --no-startup-id xinput --set-prop 15 "libinput Accel Profile Enabled" 0, 1  # adaptive profile for touchpad

# Set screenshot commands
set $screenshot_cmd scrot ~/Pictures/Screenshots/screenshot-$(date +'%Y-%m-%d_%H-%M-%S').png
set $screenshot_area_cmd scrot -s ~/Pictures/Screenshots/screenshot-$(date +'%Y-%m-%d_%H-%M-%S').png

# Bindings for screenshots
bindsym $mod+Shift+p exec --no-startup-id bash -c "$screenshot_area_cmd"
bindsym Print exec --no-startup-id bash -c "$screenshot_cmd"


